<li id="page-<%= page.id %>">
  <strong class="page">
    <%= link_to "#{page.user.name} - #{page.created_at.strftime("%B %d, %Y")}", page %>
  </strong></br>
  <span class="category">
    <%= page.category %><br/>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(page.created_at) %> ago.
    <% if current_user?(page.user) %>
      <%= link_to "delete", page, data: { "turbo-method": :delete,
                                               turbo_confirm: "You sure?" } %>
    <% end %>
  </span>
</li>