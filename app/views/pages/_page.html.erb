<li id="page-<%= page.id %>">
  <%= link_to gravatar_for(page.user, size: 50), page.user %>
  <span class="user"><%= link_to page.user.name, page.user %></span></br>
  <strong class="page"><%=page.id%></strong>
  <span class="duration">
    <%= page.duration %><br/>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(page.created_at) %> ago.
    <% if current_user?(page.user) %>
      <%= link_to "delete", page, data: { "turbo-method": :delete,
                                               turbo_confirm: "You sure?" } %>
    <% end %>
  </span>
</li>