<li id="article-<%= article.id %>" class="media-grid">
  <div class="well">
    <div class="">
      <%= image_tag("rails.svg", class:"card-img-top") %>
      <span class="user"><%= link_to article.user.name, article.user %></span></br>
      <strong class=""> <%= link_to(article.title, "http://" + article.url) %></strong>
      <span class="">
        <%= article.content %><br/>
        <i><%= article.url %></i>
      </span>
      <span class="timestamp">
        Posted <%= time_ago_in_words(article.created_at) %> ago.
        <% if current_user?(article.user) %>
          <%= link_to "delete", article, data: { "turbo-method": :delete,
                                                  turbo_confirm: "You sure?" } %>
        <% end %>
      </span>
    </div>
  </div>
</li>