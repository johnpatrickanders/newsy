<%= form_with(model: @article) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <h1>Post Article</h1>
    <%= f.text_area :title, placeholder: "Title" %>
    <%= f.text_area :content, placeholder: "Description" %>
    <%= f.text_area :url, placeholder: "URL:" %>
    <%= select(:article, :page_id, Page.all.collect { |p| [ "#{p.category} - #{p.created_at.strftime("%B %d, %Y")}", p.id ] }, { include_blank: true }) %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>